<% include ./../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 style="text-align: center">Sign Up For An Account!</h1>
            <h3 style="text-align: center;">Already Have an account? Log In <a href="/signin">Here</a></h3>
        </div>
    </header>
    <div class="row text-left">
        <div class="col-md-3 col-sm-6" style="margin: 0 10%; margin-right: 5%; background-color: rgba(156,149,131,0.9); border-radius: 15px;">
            <h2 style="text-align: center;">Registration Form</h2>
            <form action="/signup" method="post">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" id="firstName" name="firstName" placeholder="Enter First Name">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input class="form-control" type="text" id="lastName" name="lastName" placeholder="Enter Last Name">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter Email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" placeholder="Enter Desired Username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Sign Me Up!</button>
                </div>
            </form>
        </div>
        <div class="col-md-6 col-sm-6" style="background-color: rgba(156,149,131,0.9); border-radius: 15px;">
            <h3 style="text-align: center;">Don't feel like filling out all those fields?<br/>
                We get it! Skip the hassle and...</h3>
            <a role="button" class="btn btn-secondary btn-lg btn-block"
               href="/oauth/facebook">
                <button class="btn btn-lg btn-outline-primary btn-block">
                    Use Facebook To Sign Up!
                </button>
            </a><br/>
            <a role="button" class="btn btn-secondary btn-lg btn-block"
               href="/oauth/google">
                <button class="btn btn-lg btn-outline-primary btn-block">
                    Use Google To Sign Up!
                </button>
            </a><br/>
            <a role="button" class="btn btn-secondary btn-lg btn-block disabled" style="text-align:center;" href="/oauth/twitter"
               aria-disabled="true" aria-describedby="twitterHelp">
                <button class="btn btn-lg btn-outline-primary btn-block">
                    Twitter coming soon!
                </button>
            </a>
        </div>
    </div>
</div>
<% var sf = true; %>
<% include ./../partials/footer %>