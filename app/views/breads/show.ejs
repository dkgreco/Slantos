<% include ./../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group" id="list-tab" role="tablist">
                <ul class="nav nav-pills nav-stacked">
                    <li class="active submenuItem">
                        <a class="submenuButton" data-toggle="pill" href="#reviews">Reviews</a>
                    </li>
                    <li class="submenuItem">
                        <a class="submenuButton" data-toggle="pill" href="#recipe">Recipe</a>
                    </li>
                    <li class="submenuItem">
                        <a class="submenuButton" data-toggle="pill" href="#directions">Directions</a>
                    </li>
                </ul>
            </div>
            <div class="thumbnail imgThumbnail" style="margin: 2%;">
                <img class="img-responsive" style="width: 100%;" src="<%= inq.imgSrc %>"/>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail wellStain" style="margin: 0 2% 2% 2%;">
                <div class="caption">
                    <h3 style="text-align: center;">
                        <a><%= inq.name %></a>
                    </h3>
                    <h4 style="text-align: center;">
                        Posted <time datetime="<% inq.created %>"><%= inq.created %></time>
                    </h4>
                    <p style="text-align: center;">
                        <a class="btn btn-info" data-toggle="collapse" href="#collapseDescription"
                           role="button" aria-expanded="false" aria-controls="collapseExample">
                            Show/Hide Description
                        </a>
                    </p>
                    <div class="collapse" id="collapseDescription">
                        <hr class="lineSeparatorFormat"/>
                        <p class="paragraphFormat">
                            <%= inq.description %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="well" style="background: transparent; border: none; padding-top: 0;">
                <div class="tab-content">
                    <div id="reviews" class="tab-pane fade in active" style="background-color: rgba(239,231,215,0.9); border-radius: 5px; padding: 8px;">
                        <% include pagePieces/reviews %>
                    </div>
                    <div id="recipe" class="tab-pane fade">
                        <h3 class="submenuHeader">Recipe</h3>
                        <% include pagePieces/recipe %>
                    </div>
                    <div id="directions" class="tab-pane fade">
                        <h3 class="submenuHeader">Directions</h3>
                        <% include pagePieces/directions %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Custom Stylesheets-->
<link rel="stylesheet" href="/css/show.css">
<% var sf = true; %>
<% include ./../partials/footer %>