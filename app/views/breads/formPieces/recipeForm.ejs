<div class="col-md-6">
    <div class="form-group">
        <label for="recipeName">Recipe Name</label>
        <input class="form-control" type="text" id="recipeName" name="recipe[name]"
               placeholder="Brioche">
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label for="recipeName">Serving Amount</label>
        <input class="form-control" type="text" id="recipeName" name="recipe[sAmt]"
               placeholder="1 17 inch Loaf">
    </div>
</div>
<div>
    <div class="form-group col-md-12">
        <label for="imgSrc">Image Source</label>
        <input class="form-control" id="imgSrc" name="recipe[imgSrc]" type="text" placeholder="image url">
    </div>
</div>
<div class="form-group col-md-12">
    <label for="description">Description</label>
    <textarea class="form-control" rows="5" id="description" name="recipe[description]"></textarea>
</div>